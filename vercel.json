{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(docs|redoc|openapi\\.json)",
      "dest": "api/index.py"
    },
    {
      "src": "/frontend$",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/frontend/$", 
      "dest": "/frontend/index.html"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}
