{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "^/frontend$",
      "dest": "/frontend/index.html"
    },
    {
      "src": "^/frontend/$",
      "dest": "/frontend/index.html"
    },
    {
      "src": "^/frontend/(.*)$",
      "dest": "/frontend/$1"
    },
    {
      "src": "^/api$",
      "dest": "/api/index.py"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/index.py"
    },
    {
      "src": "^/(docs|redoc|openapi\\.json)$",
      "dest": "/api/index.py"
    },
    {
      "src": "^/public/(.*)$",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}
